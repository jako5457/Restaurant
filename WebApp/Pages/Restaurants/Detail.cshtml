@page "{restaurantId:int}"

@model DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Restaurant.Name</h2>
<div>
    <img src="~/img/@Url.Content(Model.Restaurant.Id.ToString() + ".jpg")" class="img-fluid" />
</div>

<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>


<a asp-page="./List" class="btn btn-info mt-3">All Restaurants</a>


@section footer {
    @if (Model.Message != null)
    {
        <div class="alert alert-info">@Model.Message</div>
    }
}